@model OLIVIEM.Viewmodel.Accountviewmodel
@{
    ViewData["Title"] = "Addsaldo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Addsaldo</h2>
<form method="post" asp-controller="Account" asp-action="Addsaldo">

    @*hoofd*@
    <div class="card-body p-3">
        <!--Body-->
        <div class="form-group">
            <div class="input-group mb-2" style=" text-align: center; width: 40%">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-user text-info"></i></div>
                </div>
                <input type="text" class="form-control" asp-for="Saldo" placeholder="Saldo" required>
            </div>
        </div>
    </div>
    <input type="submit" value="AddSaldo" class="btn btn-info btn-block rounded-0 py-2">
</form>

