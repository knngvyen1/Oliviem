@model OLIVIEM.Viewmodel.Productviewmodel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EEEEEOWWW OKUUUUUUURRR</h2>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
<div class="container">

    <div class="d-flex justify-conten-center">

        <form method="post" asp-controller="Addproduct" asp-action="AddProduct">
            <div class="card border-primary rounded-0">
                <div class="card-header p-0">
                    <div class="bg-info text-white text-center py-2">
                        <h3><i class="fa fa-envelope"></i> Add Product</h3>
                        <p class="m-0">please fill in all the required fields </p>
                    </div>
                </div>

                @*hoofd*@
                <div class="card-body p-3">
                    <!--Body-->
                    <div class="form-group">
                        <div class="input-group mb-2" style=" text-align: center; width: 40%">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-user text-info"></i></div>
                            </div>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Productname" required>
                        </div>
                    </div>
                    <!-- productname-->

                    <div class="form-group">
                        <div class="input-group mb-2" style=" text-align: center; width: 40%">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-user text-info"></i></div>
                            </div>
                            <h5>
                                Price
                                <input type="text" class="form-control" asp-for="Price" placeholder="Price" required>
                            </h5>
                        </div>
                    </div>

                    <!--PRICE-->
                    <div class="form-group">
                        <div class="input-group mb-2" style="width: 60%">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-envelope text-info"></i></div>
                            </div>
                            <h5 style="margin-left: 8px;">
                                Color
                                @*<input type="email" class="form-control" id="nombre" name="email" placeholder="" required>*@
                                <select id="Color" asp-for="Color">
                                    <option value="black">Black</option>
                                    <option value="white">White</option>
                                    <option value="grey">Grey</option>
                                    <option value="beige">Beige</option>
                                    <option value="none">None</option>
                                </select>
                            </h5>
                        </div>
                    </div>

                    <!--productcolor-->

                    <div class="form-group">
                        <div class="input-group mb-2" style="width: 40%">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-comment text-info"></i></div>
                            </div>
                            <h5 style="margin-left: 8px;">
                                Size
                                <select id="Color" asp-for="Size">
                                    <option value="xs">XS</option>
                                    <option value="s">S</option>
                                    <option value="m">M</option>
                                    <option value="L">L</option>
                                    <option value="xl">XL</option>
                                </select>
                            </h5>
                        </div>
                    </div>

                    <!--productCategory-->

                    <div class="form-group">
                        <div class="input-group mb-2" style="width: 40%">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-comment text-info"></i></div>
                            </div>
                            <h5 style="margin-left: 8px;">
                                Category
                                <select id="Color" asp-for="CategoryName">
                                    <option value="damesjurken">Dames - Jurken</option>
                                    <option value="damestops">Dames - Tops</option>
                                    <option value="damesbroeken">Dames - Broeken</option>
                                    <option value="damesjeans">Dames - Jeans</option>
                                    <option value="dameslingergie">Dames - Lingerie</option>
                                    <option value="damesrokken">Dames - Rokken</option>
                                    <option value="damessportkleding">Dames - Sportkleding</option>
                                    <option value="damesschoenen">Dames - J</option>

                                </select>
                            </h5>
                        </div>
                    </div>

                    @*<div class="form-group">
                        <div class="input-group mb-2" style="width: 40%">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-comment text-info"></i></div>
                            </div>
                            <h5 style="margin-left: 8px;">
                                Size
                                <select id="Category" asp-for="CategoryID">
                                    <option value="1">Women</option>
                                    <option value="2">Men</option>
                                </select>
                            </h5>
                        </div>
                    </div>*@



                    <!-- productsize -->
                    <div class="form-group">
                        <div class="input-group mb-2" style=" text-align: center; width: 40%">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-user text-info"></i></div>
                            </div>
                            <h5 style="margin-left: 8px;">
                                Stock
                                <input type="text" class="form-control" asp-for="Quantity" placeholder="Quantity" required>
                            </h5>
                        </div>
                    </div>
                    <!-- description-->
                    <div class="form-group">
                        <div class="input-group mb-2" style=" text-align: center; width: 40%">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-user text-info"></i></div>
                            </div>
                            <h5 style="margin-left: 8px;">
                                Description
                                <input type="text" class="form-control" asp-for="Description" placeholder="Description" required>
                            </h5>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group mb-2" style=" text-align: center; width: 40%">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-user text-info"></i></div>
                            </div>
                            <h5 style="margin-left: 8px;">
                                URL IMAGE BITCH
                                <input type="text" class="form-control" asp-for="Image" placeholder="URL IMAGE" required>
                            </h5>
                        </div>
                    </div>
                    <div class="text-center" style="width: 40%">
                        <input type="submit" value="Addproduct" class="btn btn-info btn-block rounded-0 py-2">
                    </div>
                </div>
            </div>
         
        </form>
</div>
        </div>

