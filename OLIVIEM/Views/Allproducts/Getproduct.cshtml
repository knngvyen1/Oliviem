@model OLIVIEM.Viewmodel.Productviewmodel
@{
    ViewData["Title"] = "Getproduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Getproduct</h2>

<div class="col-md-4" style="padding: 10px;">
    <div class="card">
        <img class="card-img-top" src="@Model.Image" alt="Card image cap" style="width: 100%; padding: 10px;">
        <div class="card-body">
            <h5 class="card-title">
                <a href="#" class="text-dark">@Model.Name</a>
            </h5>
        </div>
        <div class="card-footer">
            <div class="float-left">
                <a href="#" class="text-danger">€ @Model.Price</a>
            </div>
        </div>
    </div>
</div><!--.col-->