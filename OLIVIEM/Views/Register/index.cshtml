@model OLIVIEM.Viewmodel.RegisterViewmodel

@{
    ViewData["Title"] = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="~/js/site.js"></script>

<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <!-- Bootstrap core CSS -->
    <link href="../../dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="signin.css" rel="stylesheet">
</head>


<body class="text-center">
    <form class="form-signin" asp-controller="register" asp-action="Register">
        <img class="mb-4" src="../../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Create account</h1><hr />
        <input type="text" asp-for="Name" class="form-control" placeholder="Voornaam" required autofocus>

        <input type="text" asp-for="Lastname" class="form-control" placeholder="Achternaam" required autofocus>

        <input type="text" asp-for="DateOfBirth" class="form-control" placeholder="date of birth" required autofocus>
        <h4>
            Geslacht
            <select id="Gender" asp-for="Gender">
                <option value="Women"> Woman</option>
                <option value="Men">Men</option>
            </select>
        </h4>
        <input type="text" asp-for="Username" class="form-control" placeholder="Username" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Password" required>
        <input type="submit" id="button-submit" placeholder="Registreer" onclick="registerMessage('hoi')" class="btn btn-lg btn-primary btn-block" />
        <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
    </form>

   
</body>
</html>
